    <style name="AdvancedButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/adv_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="roundPercent">@dimen/calc_round</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:onClick">onButtonClick</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cal_adv_text</item>
        <item name="android:textSize">10pt</item>
        <item name="layout_constraintTag">button4</item>

    </style>

